<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.example.coreyhorn.doorgatedemo.RoomActivity">

    <TextView
        android:id="@+id/txtRoomState"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="RoomState: Open"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnWalkIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walk In"/>

    <Button
        android:id="@+id/btnWalkOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walk Out"
        app:layout_constraintTop_toBottomOf="@+id/btnWalkIn"
        app:layout_constraintStart_toStartOf="parent" />




</android.support.constraint.ConstraintLayout>
